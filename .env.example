# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env in the project root (same folder as docker-compose.yml)
# OR create backend_django/.env for backend-specific variables

# Django Configuration
DJANGO_DEBUG=0
DJANGO_SECRET_KEY=your_secret_key_here_generate_random_string
DJANGO_ALLOWED_HOSTS=*

# CORS Configuration
CORS_ORIGINS=*

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
ACCESS_TTL_SEC=900
REFRESH_TTL_SEC=1209600

# PostgreSQL Configuration
# For Docker: use service name 'postgres' as host
# For external: use IP or hostname
POSTGRES_DB=atg
POSTGRES_USER=atg
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_CONN_MAX_AGE=60

# Alternative: Use DATABASE_URL instead of individual POSTGRES_* vars
# DATABASE_URL=postgresql://user:password@host:port/database

# MinIO Configuration (S3 compatible)
# For Docker: use service name 'minio' and port 9000
# For external: use IP or hostname with port
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=atgedu
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# LDAP Authentication (optional)
LDAP_ENABLED=false
LDAP_SERVER=ldap://localhost:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_USER_DN=ou=Users,dc=example,dc=com
LDAP_USER_PASSWORD=
LDAP_USER_SEARCH_BASE=ou=Users,dc=example,dc=com
LDAP_USER_SEARCH_FILTER=(sAMAccountName={username})
LDAP_GROUP_SEARCH_BASE=dc=example,dc=com
LDAP_REQUIRE_GROUP=
LDAP_USE_TLS=false
LDAP_TLS_CA_FILE=

# Timezone (optional)
TZ=UTC

